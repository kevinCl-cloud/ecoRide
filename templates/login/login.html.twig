{% extends 'base.html.twig' %}

{% block body %}

{% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

{% if app.user %}
    <div class="mb-3">
    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ logout_path() }}">Logout</a>
    </div>
{% endif %}

    <main class="flex-fill">
        <section class="hero-inscription">
            <div class="hero-inner container">
            <h3 class="display-6 fw-bold mb-2 hero-slogan">Voyagez Ecoresponsable</h3>
            <p class="mb-3 hero-slogan">Partagez vos trajets, Economisez et protégez la planète</p>
            </div>
        </section>
        <div class="container my-5">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-4">
                    <div class="card shadow-lg p-4 border-0">
                        <div class="text-center mb-1">
                            <h2 class="titre-page">Se Connecter</h2>
                            <p>
                                Connecte-toi à <span class="eco fw-bold">Eco</span><span class="ride">Ride</span> et reprends la route.
                            </p>
                        </div>
                        <form action="{{ path('app_login')}}" method="post">
                            <label for="username">Email</label>
                            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control my-3" autocomplete="email" required autofocus>
                            <label for="password">Mot de passe</label>
                            <input type="password" name="_password" id="password" class="form-control my-3" autocomplete="current-password" required>
                            <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

                            <div class="checkbox my-3">
                                <input type="checkbox" name="_remember_me" id="_remember_me">
                                <label for="_remember_me">Se rappeler de moi</label>
                            </div>
                            <input type="hidden" name="_target_path" value="{{ path('app_home') }}">
                            <button class="btn btn-lg mb-3 btn-ecoride" type="submit">
                                Se connecter
                            </button>
                        </form>
                    </div>
                        <div class="text-center my-3">
                            <a href="{{ path('inscription') }}" class="text-decoration-none lien-inscription">
                                Pas encore de compte ? Inscris-toi !
                            </a>
                        </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
